<%= grid(@tasks, show_filters: :when_filtered) do |g|
  g.column name: '' do |task|
    check_box_tag 'tasks[]', task.id, false
  end
  g.column name: 'Title', attribute: 'title'
  g.column name: 'Description', attribute: 'description'
  g.column name: 'Priority', attribute: 'priority'
  g.column do |task|
    link_to('', task_path(task), class: 'action fa fa-book fa_icons')
  end
  g.column do |task|
    link_to('', complete_task_path(task), data: {method: :put}, class: 'done action fa fa-check-square-o ')
  end
  g.column do |task|
    link_to('', edit_task_path(task), class: 'action fa fa-pencil')
  end
  g.column do |task|
    link_to('', task, method: :delete, class: 'action fa fa-trash')
  end
end -%>