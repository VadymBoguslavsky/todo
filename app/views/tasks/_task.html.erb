<div class="task priority_<%= task.priority %> completed_<%= task.completed %>  taskpriority">

  <div class="container">
    <div class="row">
      <% unless task.completed? %>
          <div class="col-md-5">
            <%= link_to edit_task_path(task) do %>
                <span class="title"><%= task.title %></span>
            <% end %>
          </div>
          <div class="col-md-5"><span><%= task.priority %></span></div>
      <% else %>
          <div class="col-md-5 completed_true">
            <%= link_to edit_task_path(task) do %>
                <span class="title"><%= task.title %></span></div>
            <% end %>
            <div class="col-md-5 completed_true"><span><%= task.priority %></span></div>
      <% end %>

      <div class="col-md-2">
        <div class="pull-right">
          <%= link_to content_tag('span', '', class: 'fa fa-check-square-o'), complete_task_path(task), data: {method: :put}, class: 'done action' %>
          <%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_task_path(task), class: 'action' %>
          <%= link_to content_tag('span', '', class: 'fa fa-trash'), task, method: :delete, class: 'action' %>
        </div>
      </div>
    </div>

  </div>
</div>






