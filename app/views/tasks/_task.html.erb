<div class="task priority_<%= task.priority %> completed_<%= task.completed %>  taskpriority ui-state-default">

<% unless task.completed? %>
  <tr data-item_id="<%= task.id %>" class="hover1">
    <th><%= check_box_tag 'tasks[]', task.id, false %></th>
      <th>
        <span class="title">
          <span class="title"><%= best_in_place task, :title %></span>
        </span>
      </th>
      <th class="text-center"><%= best_in_place task, :priority %></th>
      <th class="text-center">
  <% else %>
    <tr data-item_id="<%= task.id %>" class="hover1 completed_true">
      <th><%= check_box_tag 'tasks[]', task.id, false %></th>
        <th>
          <span class="title">
            <%= link_to edit_task_path(task) do %>
              <span class="title">
                <%= task.title %>
              </span>
            <% end %>
          </span>
        </th>
      <th class="text-center completed_true">
        <%= task.priority %>
      </th>
      <th class="text-center">
  <% end %>
    <div class="pull-right hover2">
      <%= link_to content_tag('span', '', class: 'fa fa-book fa_icons'), task_path(task), class: 'action' %>
      <%= link_to content_tag('span', '', class: 'fa fa-check-square-o'), complete_task_path(task), data: {method: :put}, class: 'done action' %>
      <%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_task_path(task), class: 'action' %>
      <%= link_to content_tag('span', '', class: 'fa fa-trash'), task, method: :delete, class: 'action' %>
    </div>
      </th>
  </tr>

</div>