<%= link_to "Sign out", destroy_user_session_path,:class => 'navbar-link', method: :delete %> <br>
<%= link_to "Edit user info", edit_user_registration_path,:class => 'navbar-link' %>
<div class= 'col-md-12'>
<h1>My tasks</h1>


  <div class="buffer-top">
    <%= link_to "New task", new_task_path, class: 'btn btn-primary' %>
  </div>




  <div class="buffer-top">




    <% @tasks.each do |task| %>



        <%= link_to new_task_path do %>


            <%=render partial: 'task', object: task %>

        <% end %>

    <% end %>

    <hr />

    <h3>Completed tasks</h3>

    <% @completed_tasks.each do |task| %>
        <%= link_to new_task_path do %>
            <%= check_box_tag 'task', task.id %>
            <%=render partial: 'task', object: task %>
        <% end %>
    <% end %>


  </div>

</div>
