<div class='col-md-12'>
  <h1>My tasks</h1>
  <div class="buffer-top">
    <%= link_to "New task", new_task_path, class: 'btn btn-primary' %>
      </div>
  <div class="buffer-top taskswrap">
    <%= form_tag destroy_multiple_tasks_path, class: 'batch-del-form' do %>
        <ul>
          <% @tasks.each do |task| %>
              <%= link_to edit_task_path(task) do %>
                  <hr/>
                  <li class="checkbox taskwrapper">
                    <%= check_box_tag 'tasks[]', task.id, false, class: 'batch-del batch-del-checkbox' %>
                    <%= render partial: 'task', object: task %>
                  </li>
              <% end %>
              </ul>
          <% end %>
          <%= submit_tag "Delete selected", method: :delete, type: "submit", data: {confirm: "Are you sure?"}, class: "btn btn-danger batch-del-submit but_delete" %>
    <% end %>
    <hr/>
  </div>
</div>
